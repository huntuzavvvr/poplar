#include <iostream>
using namespace std;

int main()
{
  
    int n, k;
    cin >> n >> k;
    int data[k];
    
    for (int i = 0; i < k; i++) {
        cin >> data[i];
    }
    int p =1;
    int o =0;
    for (int i = 0; i < k; i++) {
      p=data[i];
      if(p!=o){
        for(int j = 0;j<k;j++){
          if(p==data[j]-1){
            n-=1;
          }
          o=p;
        }}
    }
    cout << n;
}
